#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

danish = Student.new
danish.first_name = "Danish"
danish.last_name = "Naseem"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Rossati"

some_knowledge1 = avi.teach
some_knowledge2 = avi.teach

# jim.learn(some_knowledge1) # will not work

steve.learn(some_knowledge1)
steve.learn(some_knowledge2)

danish.learn(some_knowledge1)
danish.learn(some_knowledge2)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
puts "Steve just learned another important knowledge:'#{steve.knowledge[1]}' from Avi"

puts "Danish just learned this important knowledge: '#{danish.knowledge.first}' from Avi"
puts "Danish just learned another important knowledge:'#{danish.knowledge[1]}' from Avi"
